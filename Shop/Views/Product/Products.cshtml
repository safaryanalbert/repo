@using Shop.Models
@model IEnumerable<Produts>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Products</title>
    <link href="~/Content/Css/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div class="get-products">
        <h3 class="text-center text-asphalt">Please Enter Your Product</h3>
        <div class="container-fluid">
            <div class="row justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="products-items col-3" style="margin-top:10px">
                        <div class="container-fluid">
                            <div class="row text-center bg-lightblue">
                                <div class="col-12 products-items--top">
                                    @Html.ActionLink(item.ProductName, "GetTypes", new { id = item.Product_Id }, new { @class = "products-name" })
                                    <div class="col-auto">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Product_Id })
                                    </div>
                                    <div class="col-auto">
                                        @Html.ActionLink($"Delete {@item.ProductName}", "DeleteProduct", new { id = item.Product_Id })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
            @Html.ActionLink("Create New Product", "CreateProduct", "Product",new { style = "margin-top: 20px; font-size: 22px",@class="text-center text-asphalt d-block"})
        </div>
</body>
</html>
